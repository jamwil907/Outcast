pipeline {
    agent any

    environment {
        EMAIL_RECIPIENT = 'jervin8@lsu.edu'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build Container') {
            steps {
                script {
                    // Assuming your build script is build-container.sh
                    sh 'chmod +x build-container.sh'
                    sh './build-container.sh'
                }
            }
        }

        stage('PHP Lint') {
            steps {
                script {
                    sh 'find . -name "*.php" -exec php -l {} \\;'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Adjust if you have specific tests
                    sh 'php test_weather.php'
                }
            }
        }
    }

    post {
        success {
            emailext(
                to: "${EMAIL_RECIPIENT}",
                subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """\
Build SUCCESSFUL!
Job: ${env.JOB_NAME}
Build #: ${env.BUILD_NUMBER}
Build URL: ${env.BUILD_URL}
"""
            )
        }
        failure {
            emailext(
                to: "${EMAIL_RECIPIENT}",
                subject: "FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                body: """\
Build FAILED.
Job: ${env.JOB_NAME}
Build #: ${env.BUILD_NUMBER}
Build URL: ${env.BUILD_URL}

Check console output for details.
"""
            )
        }
        always {
            emailext(
                to: "${EMAIL_RECIPIENT}",
                subject: "COMPLETED: ${env.JOB_NAME} #${env.BUILD_NUMBER} â€” ${currentBuild.currentResult}",
                body: """\
Build Completed.
Job: ${env.JOB_NAME}
Build #: ${env.BUILD_NUMBER}
Status: ${currentBuild.currentResult}
URL: ${env.BUILD_URL}
"""
            )
        }
    }
}
